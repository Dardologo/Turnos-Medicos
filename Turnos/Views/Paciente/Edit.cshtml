@model Paciente
<h1>Paciente</h1>
<hr/>
<div class="col-md-4">
    @*Los datos de este formulario se lo vamos a pasar al metodo Edit con el form asp-action*@
    <form class="col s12" asp-action="Edit">
        @*Esta etiqueta nos sirve para validar los elementos html que tenemos en el formulario como valor vacio*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <input type="hidden" asp-for="IdPaciente" />
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" />
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <label asp-for="Apellido"></label>
                <input asp-for="Apellido" />
                <span asp-validation-for="Apellido"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <label asp-for="Direccion"></label>
                <input asp-for="Direccion" />
                <span asp-validation-for="Direccion"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">phone</i>
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" />
                <span asp-validation-for="Telefono"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">contact_mail</i>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light teal darken-1" type="submit" name="action">
                        Grabar
                        <i class="material-icons right">send</i>
                    </button>


                </div>
                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn grey darken-3" asp-action="Index"><i class="material-icons left">undo</i>Volver</a>
                </div>
            </div>
        </div>

    </form>

</div>
